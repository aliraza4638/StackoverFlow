<h2 class="font-medium leading-tight text-4xl mt-0 mb-2 text-blue-600">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions bg-blue-500 hover:bg-blue-600 active:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 mt-2 mb-2" style="width: fit-content;">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
