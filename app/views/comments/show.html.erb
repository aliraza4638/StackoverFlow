<div >
  <div class="shadow-xl mb-4">
    <%= render @comment %>
  </div>
  <div class="flex flex-row">
    <% if policy(@comment).update? %>
      <%= link_to "Edit", edit_post_comment_path(@post, @comment), class: "p-0 m-1 text-white border-solid border-4 rounded-lg border-blue-400 bg-blue-400 hover:underline active:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 mb-8" %>
    <% end %>
    <%= link_to "Back", post_path(@post), class: "p-0 m-1 text-white border-solid border-4 rounded-lg border-blue-400 bg-blue-400 hover:underline active:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 mb-8" %>
    <% if policy(@comment).destroy? %>
      <%= button_to "Destroy", post_comment_path(@post, @comment), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "p-0 m-1 text-white border-solid border-4 rounded-lg border-blue-400 bg-blue-400 hover:underline active:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 mb-8" %>
    <% end %>
  </div>
</div>
